<div class="device-information">
    <h3>Device Information</h3>
    <table>
      <tr>
          <th>Timestamp</th>
          <th>IMEI</th>
      </tr>
      <% activity_history.each do |activity| %>
      <tr>
        <td><%= activity.created_at.in_time_zone(current_user.time_zone) %></td>
        <td><%= activity.imei %></td>
      </tr>
      <% end %>
    </table>
</div>
